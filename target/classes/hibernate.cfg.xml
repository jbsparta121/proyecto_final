<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/pro_final?zeroDateTimeBehavior=convertToNull</property>
    <mapping class ="com.mycompany.proyecto_final.modelo.Apartamento"/>
    <mapping class ="com.mycompany.proyecto_final.modelo.Persona"/>
    <mapping class ="com.mycompany.proyecto_final.modelo.PropietarioApartamento"/>
    <mapping class ="com.mycompany.proyecto_final.modelo.ResidenteApartamento"/>
  </session-factory>
</hibernate-configuration>
